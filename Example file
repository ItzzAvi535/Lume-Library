local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/ItzzAvi535/Lume-Library/refs/heads/main/Library", true))()

-- Example: Use the library to create a splash screen and window
library:SplashScreen()  -- Show the splash screen first

task.wait(3)  -- Wait for 3 seconds to let the splash animation complete

-- Now create the window after splash screen
library:CreateWindow("Avi & Vyxon’s UI")

-- Add content to the window (like a label)
local window = game.Players.LocalPlayer.PlayerGui:WaitForChild("Avi & Vyxon‘s UI_UI")
local contentFrame = window:FindFirstChild("ContentFrame")

local customLabel = Instance.new("TextLabel")
customLabel.Size = UDim2.new(1, -20, 0, 40)
customLabel.Position = UDim2.new(0, 10, 0, 10)
customLabel.Text = "Welcome to the Lume Library!"
customLabel.BackgroundTransparency = 1
customLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
customLabel.Font = Enum.Font.Gotham
customLabel.TextSize = 18
customLabel.Parent = contentFrame
